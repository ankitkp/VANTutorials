<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backpic1"
    tools:context="com.example.vipulagarwal.vantutorials.JavaTest">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="11dp"
        android:text="Q1). int x[] = new int[]{10,20,30}; \n Arrays can also be created and initialize as in above statement."
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Please Choose the correct answers below:"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/myRadioGroup1"
        android:orientation="horizontal"
        android:layout_marginTop="90dp">


        <RadioButton
            android:id="@+id/True1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>


        <RadioButton
            android:id="@+id/False1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myRadioGroup1"
        android:layout_marginTop="15dp"
        android:text='Q2). In an instance method or a constructor, "this" is a reference to the current object.'
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myRadioGroup2"
        android:orientation="horizontal"
        android:layout_marginTop="170dp">


        <RadioButton
            android:id="@+id/True2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>


        <RadioButton
            android:id="@+id/False2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myRadioGroup2"
        android:layout_marginTop="11dp"
        android:text="Q3). Garbage Collection is manual process."
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myRadioGroup3"
        android:orientation="horizontal"
        android:layout_marginTop="230dp">


        <RadioButton
            android:id="@+id/True3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>


        <RadioButton
            android:id="@+id/False3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myRadioGroup3"
        android:layout_marginTop="11dp"
        android:text="Q4). Constructor overloading is not possible in Java."
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myRadioGroup4"
        android:orientation="horizontal"
        android:layout_marginTop="290dp">

        <RadioButton
            android:id="@+id/True4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />


        <RadioButton
            android:id="@+id/False4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/myRadioGroup4"
        android:layout_marginTop="11dp"
        android:text="Q5). Assignment operator is evaluated Left to Right. "
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myRadioGroup5"
        android:orientation="horizontal"
        android:layout_marginTop="350dp">

        <RadioButton
            android:id="@+id/True5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />

    <RadioButton
            android:id="@+id/False5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:textStyle="bold"
            android:layout_marginLeft="200dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
</android.support.constraint.ConstraintLayout>
